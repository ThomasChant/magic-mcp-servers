{
    "buildCommand": "npm run build:vercel",
    "outputDirectory": "dist/client",
    "installCommand": "npm install --force",
    "functions": {
        "api/ssr.js": {
            "maxDuration": 30,
            "includeFiles": "dist/**"
        }
    },
    "rewrites": [
        {
            "source": "/",
            "destination": "/api/ssr"
        },
        {
            "source": "/servers",
            "destination": "/api/ssr"
        },
        {
            "source": "/servers/(.*)",
            "destination": "/api/ssr"
        },
        {
            "source": "/categories",
            "destination": "/api/ssr"
        },
        {
            "source": "/categories/(.*)",
            "destination": "/api/ssr"
        },
        {
            "source": "/:locale(zh-CN|zh-TW|fr|ja|ko|ru)",
            "destination": "/api/ssr"
        },
        {
            "source": "/:locale(zh-CN|zh-TW|fr|ja|ko|ru)/servers",
            "destination": "/api/ssr"
        },
        {
            "source": "/:locale(zh-CN|zh-TW|fr|ja|ko|ru)/servers/:slug*",
            "destination": "/api/ssr"
        },
        {
            "source": "/:locale(zh-CN|zh-TW|fr|ja|ko|ru)/categories",
            "destination": "/api/ssr"
        },
        {
            "source": "/:locale(zh-CN|zh-TW|fr|ja|ko|ru)/categories/:slug*",
            "destination": "/api/ssr"
        },
        {
            "source": "/((?!_next|api|assets|favicon|android-chrome|apple-touch|manifest|robots|sitemap|vite).*)",
            "destination": "/api/ssr"
        }
    ]
}