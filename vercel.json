{
    "buildCommand": "npm run build",
    "outputDirectory": ".",
    "installCommand": "npm install --force",
    "functions": {
        "api/ssr.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/dist/client/assets/$1"
        },
        {
            "source": "/(favicon\\.ico|robots\\.txt|sitemap\\.xml|manifest\\.json|apple-touch-icon\\.png|vite\\.svg)",
            "destination": "/dist/client/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api/ssr"
        }
    ]
}