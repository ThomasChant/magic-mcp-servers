{
    "buildCommand": "npm run build:vercel",
    "outputDirectory": "dist/client",
    "installCommand": "npm install --force",
    "functions": {
        "api/ssr.js": {
            "maxDuration": 30,
            "includeFiles": "dist/**"
        }
    },
    "rewrites": [
        {
            "source": "/servers/(.*)",
            "destination": "/api/ssr"
        },
        {
            "source": "/categories/(.*)",
            "destination": "/api/ssr"
        },
        {
            "source": "/((?!_next|api|assets|favicon|android-chrome|apple-touch|manifest|robots|sitemap|vite).*)",
            "destination": "/api/ssr"
        }
    ]
}