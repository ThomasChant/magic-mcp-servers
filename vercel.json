{
    "buildCommand": "npm run build",
    "outputDirectory": ".",
    "installCommand": "npm install --force",
    "functions": {
        "api/ssr.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/dist/client/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api/ssr"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, immutable, max-age=31536000"
                }
            ]
        },
        {
            "source": "/servers/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=3600, stale-while-revalidate=86400"
                }
            ]
        },
        {
            "source": "/categories/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=86400, stale-while-revalidate=604800"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}